  datasource db {
    provider = "postgresql"
  }

  generator client {
    provider = "prisma-client-js"
  }

  model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  name         String
  passwordHash String
  avatarUrl    String?

  passwordResetTokens PasswordResetToken[]
}

model PasswordResetToken {
  token     String   @id
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
}
