datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  name         String
  passwordHash String
  avatarUrl    String?

  passwordResetTokens PasswordResetToken[]
  workspaces Workspace[]

  AssignedIssues Issue[] @relation("AssignedIssues")
  ReportedIssues Issue[] @relation("ReportedIssues")

  comments Comment[]

  workspaceMembers WorkspaceMember[]
}

model PasswordResetToken {
  token     String   @id
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
}

model Workspace {
  id       Int               @id @default(autoincrement())
  name     String
  ownerId  Int
  urlSlug  String            @unique

  owner    User              @relation(fields: [ownerId], references: [id])
  members  WorkspaceMember[]  
  projects Project[]
  issues   Issue[]            
}

enum WorkspaceMemberRole {
  ADMIN
  MEMBER
  GUEST
}

enum InviteStatus {
  PENDING
  ACCEPTED
}

model WorkspaceMember {
  id          Int      @id @default(autoincrement())
  workspaceId Int
  userId      Int
  role        WorkspaceMemberRole @default(MEMBER)
  status      InviteStatus        @default(PENDING)
  
   workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id])  
  joinedAt    DateTime @default(now())

  @@unique([workspaceId, userId]) 
}
model Project {
  id          String   @id @default(uuid())
  workspaceId Int
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  name        String
  key         String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sprints Sprint[]
  issues  Issue[]

  @@unique([workspaceId, key])
}

model Sprint {
  id        Int      @id @default(autoincrement())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  name      String
  status    SprintStatus @default(PENDING)
  startDate DateTime?
  endDate   DateTime?

  issues    Issue[]
}

enum SprintStatus {
  PENDING
  ACTIVE
  COMPLETED
}

enum IssueStatus {
  TODO
  IN_PROGRESS
  DONE
}

enum IssuePriority {
  LOW
  MEDIUM
  HIGH
}

enum IssueType {
  TASK
  BUG
  STORY
}

model Issue {
  id           Int            @id @default(autoincrement())

  projectId    String
  workspaceId  Int
  sprintId     Int?

  ticketNumber Int
  title        String
  description  String?

  status       IssueStatus    @default(TODO)
  priority     IssuePriority  @default(MEDIUM)
  type         IssueType      @default(TASK)

  assigneeId   Int?
  reporterId   Int

  listPosition Float          @default(0)

  project      Project        @relation(fields: [projectId], references: [id])
  workspace    Workspace      @relation(fields: [workspaceId], references: [id])
  sprint       Sprint?        @relation(fields: [sprintId], references: [id])
  assignee     User?          @relation("AssignedIssues", fields: [assigneeId], references: [id])
  reporter     User           @relation("ReportedIssues", fields: [reporterId], references: [id])

  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@unique([projectId, ticketNumber])
  comments Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  issueId   Int
  userId    Int
  content   String
  createdAt DateTime @default(now())

  issue Issue @relation(fields: [issueId], references: [id])
  user  User  @relation(fields: [userId], references: [id])
}
